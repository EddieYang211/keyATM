PKG_CXXFLAGS = $(SHLIB_OPENMP_CXXFLAGS) -DHAVE_OPENMP
PKG_LIBS = $(SHLIB_OPENMP_CXXFLAGS)

# Enable C++17 as required by the package
CXX_STD = CXX17

# Optimization flags with conservative settings for compatibility
PKG_CXXFLAGS += -O2 -fno-strict-aliasing

# Fix for template parsing issues with newer GCC versions
PKG_CXXFLAGS += -fpermissive -Wno-deprecated-declarations

# Eigen specific flags for better performance (removed problematic flags)
PKG_CXXFLAGS += -DEIGEN_DONT_PARALLELIZE 